    private void botonBuscarActionPerformed(java.awt.event.ActionEvent evt) {                                            
        FileFilter filtro = new FileNameExtensionFilter("Archivo de texto (.txt)","txt");
        String filtroString = filtro.toString();
        String userDir = System.getProperty("user.home");
        JFileChooser chooser = new JFileChooser(userDir + "/Desktop");
        chooser.addChoosableFileFilter(filtro);
        chooser.setAcceptAllFileFilterUsed(false); 
        chooser.showOpenDialog(null);
        File f = chooser.getSelectedFile();
        String filename = f.getAbsolutePath();
        barraDireccion.setText(filename);
    }                                           

    private void botonCargarActionPerformed(java.awt.event.ActionEvent evt) {                                            
        entradaTexto.setText("");
        File file = new File(barraDireccion.getText()); 
        Scanner sc = null; 
        try {
            sc = new Scanner(file);
        } catch (FileNotFoundException ex) {
            Logger.getLogger(GUI.class.getName()).log(Level.SEVERE, null, ex);
        }
        String archivoLeido = "";
        try {
            archivoLeido = new String(Files.readAllBytes(Paths.get(barraDireccion.getText())));
        } catch (IOException ex) {
            Logger.getLogger(GUI.class.getName()).log(Level.SEVERE, null, ex);
        }
        entradaTexto.setText(archivoLeido);
        sc.close();
    }                                           

    private void botonAnalizarActionPerformed(java.awt.event.ActionEvent evt) {                                              
        
        //SE PUEDE UTILIZAR ESTA FUNCION PARA HACER EL ANALISIS DEL ARCHIVO
        //E IMPRIMIR ERRORES EN LA CONSOLA DE SALIDA
        String textoAnalizado = entradaTexto.getText();
        salidaTexto.setText(entradaTexto.getText());
    }                                             

    private void botonBorrarSalidaActionPerformed(java.awt.event.ActionEvent evt) {                                                  
        entradaTexto.setText("");
    }                                                 

